<div>
  <%= form_with model: [@article, @article.comments.build] do |f| %>
    <div class='flex flex-col'>
      <%= f.label :commenter %>
      <%= f.text_field :commenter, class: 'rounded-lg bg-slate-600 text-slate-200'%>
    </div>
    <div class='flex flex-col'>
      <%= f.label :body %>
      <%= f.text_field :body, class: 'rounded-lg bg-slate-600 text-slate-200'%>
    </div>
    <div class='flex flex-col'>
      <%= f.submit class: 'underline cursor-pointer' %>
      <%= link_to 'Cancel', @article, class: 'rounded'%>
    </div>
  <% end %>
</div>