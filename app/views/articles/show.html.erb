<div class='flex gap-8'>
  <div class='flex flex-col gap-2'>
    <h1>Article</h1>
    <div class='p-4 bg-slate-600 rounded-lg'>
      <h3><%= @article.title %></h3>
      <p><%= @article.body %>
    </div>
    <div class='flex gap-2'>
      <%= link_to 'Edit', edit_article_path(@article), class: 'border border-slate-500 hover:border-slate-400 rounded-lg px-2 py-1 bg-slate-700 cursor-pointer'%>
      <%= link_to 'Delete', @article, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'border border-slate-500 hover:border-slate-400 rounded-lg px-2 py-1 bg-slate-700 cursor-pointer' %>
    </div>
    <div>
      <%= link_to 'Home', root_path, class: 'border border-slate-500 hover:border-slate-400 rounded-lg px-2 py-1 bg-slate-700 cursor-pointer' %>
    </div>
    
  </div>

  <div class='flex flex-col'>
    <h2 class='text-lg font-bold'>Check out this comments</h2>
    <ul>
      <%= render @article.comments %>
    </ul>
  </div>
  
  <div class='flex flex-col'>
    <h2 class='text-lg font-bold'>Comment this article</h2>
    <ul>
      <%= render 'comments/form' %>
    </ul>
  </div>
</div>