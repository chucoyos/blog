<div class='flex flex-col gap-4 mx-auto'>
  <div class='bg-slate-500 py-4 px-6 rounded-lg'>
    <h3 class='texl-xl font-bold'><%= @article.title %> </h3>
    <p><%= @article.updated_at.strftime("%B, %d, %Y") %></p>
    <div class='bg-gradient-to-r from-slate-950 to-slate-700 shadow-2xl py-4 px-6 rounded-md'>
      <p><%= @article.body%></p>
    </div>
    <div class='grid grid-flow-col justify-stretch gap-2 my-4'>
      <%= link_to 'Edit', edit_article_path(@article), class: 'bg-slate-700 text-slate-400 hover:bg-slate-400 hover:text-slate-700 font-semibold shadow-xl hover:shadow-2xl rounded-lg px-6 py-2 cursor-pointer text-center' %>
      <%= link_to 'Delete', article_path(@article), data: {turbo_method: :delete, turbo_confirm: 'Delete article?'}, class: 'bg-slate-700 text-slate-400 hover:bg-slate-400 hover:text-slate-700 font-semibold shadow-xl hover:shadow-2xl rounded-lg px-6 py-2 cursor-pointer text-center' %>
      <%= link_to 'Comment', article_path(@article), data: {turbo_method: :delete, turbo_confirm: 'Delete article?'}, class: 'bg-slate-700 text-slate-400 hover:bg-slate-400 hover:text-slate-700 font-semibold shadow-xl hover:shadow-2xl rounded-lg px-6 py-2 cursor-pointer text-center' %>
    </div>
    <% if @article.comments.any?%>
      <div class='flex bg-slate-500 rounded-xl py-1 px-2 mb-2'>
        <p class='text-sm'>üë¶Ô∏è<span class='font-semibold'> <%= @article.comments.first.commenter %></span> <%= @article.comments.first.body %>...</p>
      </div>
    <% end %>
    
    <div>
      <ul class='flex flex-col gap-2'><%= render @article.comments %></ul>
    </div>
  </div>
  <div class='bg-slate-500 rounded-xl py-1 px-2 my-2'>
    <h2 class='font-bold text-center'>Comment this article here</h2>
    <%= render 'comments/form' %>
  </div>
</div>